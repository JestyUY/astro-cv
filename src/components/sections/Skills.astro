---
import Section from "@/components/Section.astro";
import {skills } from '@cv';
---

<Section title="skills">
    <ul class="inline-flex flex-wrap gap-2 items-center">
        {skills.map(({ name }) =>
        { return (
            <li class="flex gap-2 items-center mb-4 border-zinc-200 border bg-zinc-100 rounded-md px-2">
                    <span>{name}</span>
                    
                </li>
        )})}
    </ul>
    

</Section>